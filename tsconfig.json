{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "lib": ["es2020"],
      "allowJs": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "src"
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ],
    "ts-node": {
      "esm": true
    }
}
